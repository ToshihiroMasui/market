<div class="container">
  <%= form_with model: @product, local: true do |f| %>
    <div class="form-group">
      <label for="product_name">商品名</label>
        <%= f.text_field :name, required: true, class: "form-control", id:"product_name", placeholder:"コードキャンプのTシャツです"%>
    </div>
  
    <div class="form-group">
      <label for="explanatory_text">説明文</label>
        <%= f.text_area :description, required: true, class: "form-control", id:"explanatory_text", placeholder:"コードキャップで作成したTシャツです", rows:"1"%>
    </div>
  
    <div id="category" >
      <label for="category">カテゴリ</label>
        <%= f.select :category_id, options_from_collection_for_select(@category, :id, :name), {class:"form-control"}, required: true %>
    </div>
    
    <div class="form-group">
      <label for="price">価格</label>
        <%= f.number_field :price,required: true, class:"form-control", placeholder:"0" %>
    </div>
    
    <div>
      <%= f.label :画像 %>
      <%= f.file_field :image1 %>
    </div>
    
    <button type="submit" class="btn btn-primary mt-5">送信する</button>
    
  <% end %>
</div>